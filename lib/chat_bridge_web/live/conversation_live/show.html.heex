<div class="flex min-h-screen w-auto">
  <div class="hidden w-64 flex-col border-r bg-background p-4 sm:flex">
    <div class="mb-4 flex items-center gap-2">
      <span class="relative flex shrink-0 overflow-hidden rounded-full w-10 h-10">
        <.icon name="hero-user-circle-solid" class="aspect-square h-full w-full" />
      </span>
      <div class="flex-1 truncate">
        <div class="font-medium">Acme Inc</div>
        <p class="text-sm text-muted-foreground">Online</p>
      </div>

      <nav x-data="{ open: false }">
        <button
          class="inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 hover:bg-accent hover:text-accent-foreground h-8 w-8"
          type="button"
          @click="open = !open"
          @click.outside="open = false"
        >
          <.icon name="hero-bars-3" />
        </button>
        <div
          x-show="open"
          class="absolute z-10 mt-2 w-32 rounded-md bg-white p-1 shadow-lg ring-1 ring-black ring-opacity-5 focus:outline-none"
          tabindex="-1"
        >
          <.link
            class="flex items-center gap-2 rounded-md px-3 py-2 text-sm font-medium transition-colors hover:bg-muted"
            href={~p"/users/settings"}
          >
            Settings
          </.link>
          <.link
            class="flex items-center gap-2 rounded-md px-3 py-2 text-sm font-medium transition-colors hover:bg-muted"
            href={~p"/users/log_out"}
            method="delete"
          >
            <.icon name="hero-arrow-left-on-rectangle" />
            <span>Logout</span>
          </.link>
        </div>
      </nav>
    </div>
    <div class="flex-1 overflow-auto">
      <nav class="space-y-1">
        <.link
          :for={conversation <- @conversations}
          class="flex items-center gap-2 rounded-md px-3 py-2 text-sm font-medium transition-colors hover:bg-muted"
          href={~p"/conversations/#{conversation.id}"}
        >
          <% user =
            if !conversation.is_group,
              do: Enum.find(conversation.members, &(&1.user.id != @current_user.id)).user,
              else: %{id: 1, nickname: conversation.title} %>
          <span class="relative flex shrink-0 overflow-hidden rounded-full w-8 h-8">
            <.avatar user={user} conversation={conversation} class="aspect-square h-full w-full" />
          </span>
          <div class="flex-1 truncate">
            <.conversation_title conversation={conversation} user={@current_user} />
            <p class="text-xs text-muted-foreground">Online</p>
          </div>
          <div
            class="inline-flex w-fit items-center whitespace-nowrap rounded-full border font-semibold transition-colors focus:outline-none focus:ring-2 focus:ring-ring focus:ring-offset-2 border-transparent bg-secondary text-secondary-foreground hover:bg-secondary/80 px-2 py-1 text-xs"
            data-v0-t="badge"
          >
            3
          </div>
        </.link>
        <a
          class="flex items-center gap-2 rounded-md px-3 py-2 text-sm font-medium transition-colors hover:bg-muted"
          href="#"
        >
          <span class="relative flex shrink-0 overflow-hidden rounded-full w-8 h-8">
            <.icon name="hero-user-circle-solid" class="aspect-square h-full w-full" />
          </span>
          <div class="flex-1 truncate">
            <div>Jane Smith</div>
            <p class="text-xs text-muted-foreground">Offline</p>
          </div>
        </a>
        <a
          class="flex items-center gap-2 rounded-md px-3 py-2 text-sm font-medium transition-colors hover:bg-muted"
          href="#"
        >
          <span class="relative flex shrink-0 overflow-hidden rounded-full w-8 h-8">
            <.icon name="hero-user-circle-solid" class="aspect-square h-full w-full" />
          </span>
          <div class="flex-1 truncate">
            <div>Alex Johnson</div>
            <p class="text-xs text-muted-foreground">Online</p>
          </div>
          <div
            class="inline-flex w-fit items-center whitespace-nowrap rounded-full border font-semibold transition-colors focus:outline-none focus:ring-2 focus:ring-ring focus:ring-offset-2 border-transparent bg-secondary text-secondary-foreground hover:bg-secondary/80 px-2 py-1 text-xs"
            data-v0-t="badge"
          >
            1
          </div>
        </a>
      </nav>
    </div>
  </div>
  <div class="flex flex-col flex-1 max-h-[50%]">
    <header class="border-b bg-background p-4 sm:p-6">
      <div class="flex items-center justify-between">
        <div class="flex items-center gap-4">
          <button class="inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 hover:bg-accent hover:text-accent-foreground h-8 w-8 sm:hidden">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="h-4 w-4"
            >
              <path d="m12 19-7-7 7-7"></path>
              <path d="M19 12H5"></path>
            </svg>
            <span class="sr-only">Back</span>
          </button>
          <span class="relative flex shrink-0 overflow-hidden rounded-full w-10 h-10">
            <.icon name="hero-user-circle-solid" class="aspect-square h-full w-full" />
          </span>
          <div class="flex-1">
            <div class="font-medium">John Doe</div>
            <p class="text-sm text-muted-foreground">Online</p>
          </div>
        </div>
        <button
          class="inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 hover:bg-accent hover:text-accent-foreground h-8 w-8"
          type="button"
          id="radix-:rn:"
          aria-haspopup="menu"
          aria-expanded="false"
          data-state="closed"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="h-4 w-4"
          >
            <polyline points="8 18 12 22 16 18"></polyline>
            <polyline points="8 6 12 2 16 6"></polyline>
            <line x1="12" x2="12" y1="2" y2="22"></line>
          </svg>
        </button>
      </div>
    </header>
    <div class="flex-1 overflow-auto p-4 sm:p-6">
      <div :for={message <- @messages} class="grid gap-4 mb-4">
        <div
          :if={message.user.id != @current_user.id}
          class="flex items-start gap-4 justify-start"
        >
          <span class="relative flex shrink-0 overflow-hidden rounded-full w-8 h-8">
            <.avatar
              user={message.user}
              conversation={@conversation}
              class="aspect-square h-full w-full"
            />
          </span>
          <div class="grid gap-1 rounded-lg bg-muted p-3 text-sm">
            <div class="font-medium"><%= message.user.nickname %></div>
            <div class="break-words">
              <p><%= message.body %></p>
            </div>
          </div>
        </div>
        <div :if={message.user.id == @current_user.id} class="flex items-start gap-4 justify-end">
          <div class="grid gap-1 rounded-lg bg-muted p-3 text-sm">
            <div class="font-medium"><%= message.user.nickname %></div>
            <div class="break-words">
              <p><%= message.body %></p>
            </div>
          </div>
          <span class="relative flex shrink-0 overflow-hidden rounded-full w-8 h-8">
            <.avatar
              user={message.user}
              conversation={@conversation}
              class="aspect-square h-full w-full"
            />
          </span>
        </div>
      </div>
    </div>
    <div class="border-t bg-background p-4 sm:p-6">
      <.form :let={f} for={@changeset} as={:message} phx-change="validate" phx-submit="send" class="w-full sticky">
        <.input type="hidden" field={f[:user_id]} value={@current_user.id} />
        <.input type="hidden" field={f[:conversation_id]} value={@conversation.id} />
        <div class="flex items-center relative">
          <.input
            type="textarea"
            field={f[:body]}
            placeholder="Enter a message..."
          />
        <button
          class="inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 bg-primary text-primary-foreground hover:bg-primary/90 absolute w-8 h-8 top-3 right-3"
          type="submit"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="w-4 h-4"
          >
            <path d="m22 2-7 20-4-9-9-4Z"></path>
            <path d="M22 2 11 13"></path>
          </svg>
        </button>
        </div>
      </.form>
    </div>
  </div>
</div>

<.modal
  :if={@live_action == :edit}
  id="conversation-modal"
  show
  on_cancel={JS.patch(~p"/conversations/#{@conversation}")}
>
  <.live_component
    module={ChatBridgeWeb.ConversationLive.FormComponent}
    id={@conversation.id}
    title={@page_title}
    action={@live_action}
    conversation={@conversation}
    patch={~p"/conversations/#{@conversation}"}
  />
</.modal>
